#!/usr/bin/python3

class Square:
    """Defines a square by

    Args: size - size of the square
    Return: nothing
    """
    def __init__(self, size=0):
        self.__size = size

        if type(self.__size) == int is not True:
            raise TypeError("size must be an integer")
        if self.__size < 0:
            raise ValueError("size must be >= 0")
